# Production Environment Variables for cPanel Deployment
# Copy this file to .env.production and fill in your actual values

NODE_ENV=production

# Database Configuration
# Replace with your actual PostgreSQL database connection string
DATABASE_URL="postgresql://username:password@localhost:5432/thecrop_csoapp"

# NextAuth Configuration
# Generate a secure random string for NEXTAUTH_SECRET
NEXTAUTH_SECRET="your-super-secret-key-here-generate-a-random-string"

# Application URL
NEXTAUTH_URL="https://selfassess.csogo.org"

# Brevo Email Configuration
BREVO_API_KEY="your-brevo-api-key-here"
BREVO_FROM_EMAIL="noreply@csogo.org"
BREVO_FROM_NAME="CSO Self-Assessment Tool"

# Server Port (cPanel will manage this automatically)
PORT=3000
