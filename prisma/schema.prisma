generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Organization {
  id                    String       @id @default(cuid())
  name                  String
  email                 String       @unique
  password              String?      // Hashed password for organization login
  emailVerified         Boolean      @default(false)
  emailVerifyToken      String?
  emailVerifyExpiry     DateTime?
  passwordResetToken    String?
  passwordResetExpiry   DateTime?
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  assessments           Assessment[]
}

model Assessment {
  id             String           @id @default(cuid())
  name           String?          // Optional name for the assessment
  organizationId String
  organization   Organization     @relation(fields: [organizationId], references: [id])
  status         AssessmentStatus @default(IN_PROGRESS)
  startedAt      DateTime         @default(now())
  completedAt    DateTime?
  responses      Response[]
  report         Report?
  shareableLink  String?         @unique
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model Section {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text // Using Text for MySQL to support longer descriptions
  order       Int
  weight      Float     @default(1.0) // Weight of this section in overall assessment
  questions   Question[]
  suggestions SectionSuggestion[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Question {
  id          String     @id @default(cuid())
  sectionId   String
  section     Section    @relation(fields: [sectionId], references: [id])
  text        String     @db.Text // Using Text for MySQL to support longer question text
  description String?    @db.Text // Using Text for MySQL to support longer descriptions
  type        QuestionType
  options     Json?      // For multiple choice questions
  order       Int
  weight      Float     @default(1.0) // Weight of this question within its section
  isHidden    Boolean    @default(false)
  mandatory   Boolean    @default(false)
  responses   Response[]
  suggestions QuestionSuggestion[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Response {
  id           String     @id @default(cuid())
  assessmentId String
  assessment   Assessment @relation(fields: [assessmentId], references: [id])
  questionId   String
  question     Question   @relation(fields: [questionId], references: [id])
  value        Json       // The response value (can be string, number, boolean, or array)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

// Question-level suggestions based on specific response values
model QuestionSuggestion {
  id          String   @id @default(cuid())
  questionId  String
  question    Question @relation(fields: [questionId], references: [id])
  condition   Json     // Conditions that trigger this suggestion (e.g., {"value": "low", "operator": "equals"})
  suggestion  String   @db.Text // The suggestion text (using Text for MySQL to support longer content)
  category    String?  // Category for organizing suggestions (e.g., "Security", "Operations", "Training")
  priority    Int      @default(0) // Priority level (higher = more important)
  weight      Float    @default(1.0) // Weight of this suggestion
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Section-level suggestions based on aggregated responses
model SectionSuggestion {
  id          String   @id @default(cuid())
  sectionId   String
  section     Section  @relation(fields: [sectionId], references: [id])
  condition   Json     // Conditions that trigger this suggestion (e.g., {"minScore": 0.6, "maxScore": 0.8})
  suggestion  String   @db.Text // The suggestion text (using Text for MySQL to support longer content)
  category    String?  // Category for organizing suggestions (e.g., "Security", "Operations", "Training")
  priority    Int      @default(0) // Priority level (higher = more important)
  weight      Float    @default(1.0) // Weight of this suggestion
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Assessment-level suggestions based on overall scores
model AssessmentSuggestion {
  id          String   @id @default(cuid())
  condition   Json     // Conditions that trigger this suggestion (e.g., {"overallScore": {"min": 0.7, "max": 0.9}})
  suggestion  String   @db.Text // The suggestion text (using Text for MySQL to support longer content)
  category    String?  // Category for organizing suggestions (e.g., "Strategic", "Leadership", "Overall Performance")
  priority    Int      @default(0) // Priority level (higher = more important)
  weight      Float    @default(1.0) // Weight of this suggestion
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



model Report {
  id           String     @id @default(cuid())
  assessmentId String     @unique
  assessment   Assessment @relation(fields: [assessmentId], references: [id])
  content      Json       // The report content including scores and suggestions
  suggestions  ReportSuggestion[] // Generated suggestions for this report
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

// Generated suggestions for a specific assessment report
model ReportSuggestion {
  id          String   @id @default(cuid())
  reportId    String
  report      Report   @relation(fields: [reportId], references: [id])
  type        SuggestionType // QUESTION, SECTION, or ASSESSMENT
  sourceId    String?  // ID of the question/section that triggered this suggestion
  suggestion  String   @db.Text // The actual suggestion text (using Text for MySQL to support longer content)
  priority    Int      @default(0)
  weight      Float    @default(1.0)
  metadata    Json?    // Additional metadata about the suggestion
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id                   String    @id @default(cuid())
  name                 String
  email                String    @unique
  password             String?
  isInvited            Boolean   @default(false)
  inviteToken          String?
  inviteExpiry         DateTime?
  invitedBy            String?
  inviteAcceptedAt     DateTime?
  passwordResetToken   String?
  passwordResetExpiry  DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

enum AssessmentStatus {
  IN_PROGRESS
  COMPLETED
}

enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICE
  LIKERT_SCALE
  TEXT
  BOOLEAN
}

enum SuggestionType {
  QUESTION
  SECTION
  ASSESSMENT
}
